# Django
DJANGO_SETTINGS_MODULE=config.settings
DEBUG=False
DJANGO_SECRET_KEY=SET_IN_ENV_OR_RENDER

# Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,cloakpost-web.onrender.com
# Full origins, comma-separated (include https://)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://cloakpost-web.onrender.com

# Database (set one of these in real envs)
# For Render Postgres this is injected automatically via render.yaml:
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Redis (Channels/Celery). On Render you'll likely get rediss://
REDIS_URL=rediss://hostname:6380/0

# App crypto â€” generate per-environment; never commit a real value
CRYPTO_MASTER_KEY=GENERATE_A_UNIQUE_32B_BASE64_KEY
